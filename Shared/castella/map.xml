<?xml version="1.0" encoding="UTF-8"?>
<map name="Castella" version="1.1.0" spec="1.0.0">
    <include src="defaults.xml"/>
    <include src="Shared/nexus-kits.xml"/>
    <include src="Shared/reward-one-gap.xml"/>

    <authors>
        <author uuid="da98a2f1673c4cecb547e0a342abfde4"/>
        <author uuid="bf3319534f9243ee8abc7544b8234936"/>
    </authors>

    <teams>
        <team id="blue" color="blue" min="2" max="25">Blue</team>
        <team id="red" color="red" min="2" max="25">Red</team>
    </teams>
    <broadcasts>
        <broadcast format="alert" interval="2m">{broadcasts.map-kits}</broadcast>
        <broadcast format="alert" interval="2m">{broadcasts.map-kits-2}</broadcast>
    </broadcasts>

    <!-- TODO: Time Limit -->

    <objectives>
        <scores kills="1" limit="100">
           <score team="blue"/>
           <score team="red"/>
        </scores>
    </objectives>

    <results>
        <win scenario="objectives">
            <check>
                <time>8m</time>
            </check>
        </win>
    </results>

    <spawns>
        <spawn yaw="90">
            <regions>
                <block>-35, 51, 54</block>
            </regions>
        </spawn>
        <spawn team="blue" yaw="180">
            <regions>
                <block>-6, 81, 171</block>
            </regions>
        </spawn>
        <spawn team="red" yaw="0">
            <regions>
                <block>-7, 81, -68</block>
            </regions>
        </spawn>
    </spawns>

    <zones>
        <zones>
            <zone modify="never" region="everywhere"/>
        </zones>
    </zones>

    <world>
        <gamerules>
            <doTileDrops>false</doTileDrops>
        </gamerules>
    </world>
</map>
